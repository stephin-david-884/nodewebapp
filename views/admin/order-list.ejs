<%- include("../../views/partials/admin/header") %>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .orders-container {
      padding: 40px 20px;
    }

    h2 {
      color: #343a40;
      font-weight: 600;
    }

    .table {
      background-color: #fff;
      border-radius: 8px;
      overflow: hidden;
    }

    .table th,
    .table td {
      vertical-align: middle;
    }

    .btn-primary {
      background-color: #007bff;
      border: none;
    }

    .btn-primary:hover {
      background-color: #0056b3;
    }

    .badge {
      text-transform: capitalize;
      font-size: 0.9rem;
      padding: 0.5em 0.75em;
    }

    .no-orders {
      background-color: #fff3cd;
      border: 1px solid #ffeeba;
      padding: 20px;
      border-radius: 6px;
      color: #856404;
    }

    form[role='search'] {
      max-width: 480px;
      margin-bottom: 1rem;
    }

    form[role='search'] input.form-control {
      height: 38px;
      font-size: 1rem;
    }

    form[role='search'] button {
      min-width: 90px;
      font-weight: 600;
    }
  </style>
</head>
<body>
  <div class="container orders-container">
    <h2 class="mb-4">Admin Orders</h2>

    <!-- Search form -->
    <form method="GET" action="/adminOrders" class="mb-4" role="search">
      <input
        type="text"
        name="search"
        placeholder="Search orders by ID, status or name"
        value="<%= typeof search !== 'undefined' ? search : '' %>"
        class="form-control"
      />
    </form>

    <% if (orders.length === 0) { %>
      <div class="no-orders">You have no orders yet.</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm">
          <thead class="table-light">
            <tr>
              <th>Order ID</th>
              <th>User Name</th>
              <th>Placed On</th>
              <th>Status</th>
              <th>Total Price (₹)</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
  <% orders.forEach(order => { %>
    <tr>
      <td><%= order.orderId %></td>
      <td><%= order.user?.name || 'N/A' %></td>
      <td><%= new Date(order.createdOn).toLocaleDateString() %></td>
      <td>
        <span class="badge bg-<%= 
          order.status === 'Pending' ? 'warning' :
          order.status === 'Processing' ? 'info' :
          order.status === 'Shipped' ? 'primary' :
          order.status === 'Delivered' ? 'success' :
          order.status === 'Cancelled' ? 'danger' :
          order.status === 'Return Request' ? 'warning' :
          order.status === 'Returned' ? 'secondary' :
          order.status === 'Confirmed' ? 'success' :
          'secondary'
        %>">
          <%= order.status %>
        </span>
      </td>
      <td>₹<%= order.finalAmount.toFixed(2) %></td>
      <td>
        <a href="/admin/order/<%= order.orderId %>" class="btn btn-sm btn-primary">
          View Order
        </a>
      </td>
    </tr>
  <% }); %>
</tbody>

        </table>

        <!-- Pagination -->
        <nav aria-label="Page navigation example" class="mt-3">
          <ul class="pagination justify-content-center">
            <% if (currentPage > 1) { %>
              <li class="page-item">
                <a
                  class="page-link"
                  href="?page=<%= currentPage - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>"
                  aria-label="Previous"
                >
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
            <% } else { %>
              <li class="page-item disabled">
                <span class="page-link">&laquo;</span>
              </li>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a
                  class="page-link"
                  href="?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>"
                >
                  <%= i %>
                </a>
              </li>
            <% } %>

            <% if (currentPage < totalPages) { %>
              <li class="page-item">
                <a
                  class="page-link"
                  href="?page=<%= currentPage + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>"
                  aria-label="Next"
                >
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            <% } else { %>
              <li class="page-item disabled">
                <span class="page-link">&raquo;</span>
              </li>
            <% } %>
          </ul>
        </nav>
      </div>
    <% } %>
  </div>
</body>

<%- include("../../views/partials/admin/footer") %>