        }

        function verifyPayment(order, payment, orderId) {
            $.ajax({
                url: '/verifyPayment',
                method: 'post',
                data: {
                    order,
                    payment
                },
                success: (response) => {
                    if (response.status) {
                        $.ajax({
                            url: '/paymentConfirm',
                            method: 'post',
                            data: {
                                status: "Pending",
                                orderId
                            },
                        });

                        Swal.fire({
                            title: "Order success",
                            text: "Order placed successfully",
